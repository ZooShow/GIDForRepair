{% extends 'base.html.twig' %}

{% block title %}{{ tool.name }}{% endblock %}

{% block body %}
    <div class="shadow-2-strong"
         style="width: 70vw; margin-top: 20px; margin-left: 15vw; padding-top:20px; padding-left: 20px; padding-right: 20px">
        <div class="card" style="margin-top: 10px; margin-bottom: 30px;">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                <img src="{{ tool.src|raw }}" class="img-fluid"/>
                <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{ tool.name }}</h5>
                <p class="card-text">{{ tool.description }}</p>
            </div>
        </div>
        <h2>Поставщики:</h2>
        {% for vendor in tool.vendors %}
            <div class="card" style="margin-top: 10px">
                <div class="card-body">
                    <h5 class="card-title">{{ vendor.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ vendor.address }}</h6>
                    <p class="card-text">Цена: {{ vendor.cost }}руб.</p>
                </div>
            </div>
        {% endfor %}
        <h2 style="margin-top: 20px">На карте:</h2>
        <div class="d-flex align-items-center justify-content-center" style="margin-top: 20px; margin-bottom: 30px">
            <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Abdb056b87dd416a249ea3b35f52779672a38a92cd0c282eccd98d23680f2d657&amp;width=963&amp;height=381&amp;lang=ru_RU&amp;scroll=true"></script>
        </div>
    </div>
{% endblock %}
